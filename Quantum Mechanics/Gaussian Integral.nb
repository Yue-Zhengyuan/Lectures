  3.786423796643696*^9}},ExpressionUUID->"c8cdd5c3-f997-41aa-8025-\
ce2798b5dfc8"],

Cell[BoxData[
 FormBox[
  RowBox[{"LHS", "=", 
   RowBox[{
    RowBox[{
     FractionBox["\[PartialD]", 
      RowBox[{"\[PartialD]", 
       OverscriptBox["\[Eta]", "_"]}]], 
     RowBox[{
      FractionBox["\[PartialD]", 
       RowBox[{"\[PartialD]", "\[Eta]"}]], 
      RowBox[{"(", 
       RowBox[{"1", "-", 
        RowBox[{
         OverscriptBox["\[Eta]", "_"], "a", " ", "\[Eta]"}]}], ")"}]}]}], "=", 
    RowBox[{
     RowBox[{
      FractionBox["\[PartialD]", 
       RowBox[{"\[PartialD]", 
        OverscriptBox["\[Eta]", "_"]}]], 
      RowBox[{
       FractionBox["\[PartialD]", 
        RowBox[{"\[PartialD]", "\[Eta]"}]], 
       RowBox[{"(", 
        RowBox[{"1", "+", 
         RowBox[{"\[Eta]", " ", "a", " ", 
          OverscriptBox["\[Eta]", "_"]}]}], ")"}]}]}], "=", "a"}]}]}], 
  TraditionalForm]], "Equation",
 CellChangeTimes->{{3.786423789615045*^9, 3.78642387659042*^9}, {
  3.786424899588047*^9, 
