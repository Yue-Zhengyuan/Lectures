Cell[BoxData[
 FormBox[
  RowBox[{
   RowBox[{"\[Integral]", 
    RowBox[{
     RowBox[{"\[DifferentialD]", 
      OverscriptBox["z", "_"]}], " ", 
     RowBox[{"\[DifferentialD]", "z"}], " ", 
     SuperscriptBox["\[ExponentialE]", 
      RowBox[{
       RowBox[{"-", 
        OverscriptBox["z", "_"]}], "a", " ", "z"}]]}]}], "=", 
   RowBox[{
    RowBox[{"\[Integral]", 
     RowBox[{
      RowBox[{"\[DifferentialD]", "x"}], " ", 
      RowBox[{"\[DifferentialD]", "y"}], " ", 
      RowBox[{"(", 
       RowBox[{"2", "\[ImaginaryI]"}], ")"}], 
      SuperscriptBox["\[ExponentialE]", 
       RowBox[{"-", 
        RowBox[{"a", "(", 
         RowBox[{
          SuperscriptBox["x", "2"], "+", 
          SuperscriptBox["y", "2"]}], ")"}]}]]}]}], "=", 
    RowBox[{
     RowBox[{"\[Integral]", 
      RowBox[{"r", 
       RowBox[{"\[DifferentialD]", "r"}], 
       RowBox[{"\[DifferentialD]", "\[Theta]"}], " ", 
       RowBox[{"(", 
        RowBox[{"2", "\[ImaginaryI]"}], ")"}], 
       SuperscriptBox["\[ExponentialE]", 
        RowBox[{
         RowBox[{"-", "a"}], " ", 
         SuperscriptBox["r", "2"]}]]}]}], "=", 
     RowBox[{
      RowBox[{"4", "\[Pi]", " ", "\[ImaginaryI]", 
       RowBox[{
        SubsuperscriptBox["\[Integral]", "0", "\[Infinity]"], 
        RowBox[{
         RowBox[{"\[DifferentialD]", "r"}], " ", 
         RowBox[{"(", 
          RowBox[{"r", " ", 
           SuperscriptBox["\[ExponentialE]", 
            RowBox[{
             RowBox[{"-", "a"}], " ", 
             SuperscriptBox["r", "2"]}]]}], ")"}]}]}]}], "=", 
      FractionBox[
       RowBox[{"\[Pi]", " ", "\[ImaginaryI]"}], 
       RowBox[{"2", "a"}]]}]}]}]}], TraditionalForm]], "Equation",
