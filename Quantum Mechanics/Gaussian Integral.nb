 Cell[BoxData[
  FormBox[
   RowBox[{
    RowBox[{"z", "=", 
     RowBox[{"x", "+", 
      RowBox[{"\[ImaginaryI]", " ", "y"}]}]}], ",", " ", 
    RowBox[{
     OverscriptBox["z", "_"], "=", 
     RowBox[{"x", "-", 
      RowBox[{"\[ImaginaryI]", " ", "y"}]}]}]}], TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "1c1561aa-781c-4b8a-b609-e88a49a2c6d7"],
 ")"
}], "Text",
