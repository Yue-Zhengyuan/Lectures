Cell[BoxData[
 FormBox[
  RowBox[{"\[Integral]", 
   RowBox[{
    RowBox[{"\[DifferentialD]", 
     OverscriptBox["\[Eta]", "_"]}], 
    RowBox[{"\[DifferentialD]", "\[Eta]"}], " ", 
    SuperscriptBox["\[ExponentialE]", 
     RowBox[{
      RowBox[{"-", 
       OverscriptBox["\[Eta]", "_"]}], " ", "a", " ", "\[Eta]"}]], " ", 
    RowBox[{"(", 
     RowBox[{"a", "\[Element]", "\[DoubleStruckCapitalC]"}], ")"}]}]}], 
  TraditionalForm]], "EquationNumbered",
